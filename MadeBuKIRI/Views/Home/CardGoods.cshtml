@model Goods
@{

}
		
	
	


  <div class="card">
	<div class="name">@Model.NameGoods</div>
	<div class="article"><h2>@Model.Article</h2></div>
	<div class="info"><h4>@Model.Info</h4></div>
	<div class="price"><h2>@Model.Price</h2></div>
	<div id="carouselExample" class="carousel slide">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="@($"/images/goods/{Model.GoodsId}-1.jpg")" @*width="800"*@ height="500" alt="...">
			</div>
			<div class="carousel-item">
				<img src="@($"/images/goods/{Model.GoodsId}-2.jpg")"  @*width="800"*@ height="500" alt="...">
			</div>
			<div class="carousel-item">
				<img src="@($"/images/goods/{Model.GoodsId}-3.jpg")" @*width="800"*@ height="500" alt="...">
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
	<div class="well">
		<h3>
			<strong>@Model.NameGoods</strong>
			<span class="pull-right label label-primary">@Model.Price.ToString("# uFFFFFFhy")</span>
		</h3>
		@using (Html.BeginForm("AddToCart", "Cart"))
		{
			<div class="pull-right">
				@Html.HiddenFor(x => x.GoodsId)
			@*	@Html.Hidden("returnUrl", Request.Url.PathAndQuery)*@
				<input type="submit" class="btn btn-success" value="Добавить в корзину" />
			</div>
		}
		<span class="lead">@Model.Info</span>
	</div>
	</a>
  </div>



}

			

