@model List<Goods>
@{
    ViewData["Title"] = "Belts";
}
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var goods in Model.Where(goods => goods.Article.Contains("K3")))
    {

        <div class="col">
            <a asp-controller="home" asp-action="cardgoods"
           asp-route-Id="@goods.GoodsId">
                <img src="@($"/images/goods/{goods.GoodsId}-1.jpg")" class="card-img-top" alt="...">

                <div class="card-body">
                    <h5 class="card-title">@goods.NameGoods</h5>
                    <p class="card-text">@goods.Article</p>
                    <p class="card-text">@goods.Price.ToString("c")</p>
                    @if (goods.Available == true)
                    {
                        <a class="btn btn-outline-dark" asp-controller="ShopCart" asp-action="AddToCarts"
                   asp-route-goodsId="@goods.GoodsId"> Add to Cart</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-dark" asp-controller="ShopCart" asp-action="AddToCarts"
                   asp-route-goodsId="@goods.GoodsId"> Made to order</a>
                    }

                </div>
            </a>
        </div>
    }
</div>
